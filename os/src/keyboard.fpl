class Keyboard
    var seenE0 = false
    var seenF0 = false
    var lshift = false
    var rshift = false
    var lctrl  = false
    var rctrl  = false
    var lalt   = false
    var ralt   = false
    var caps   = false
    var menu   = false
    var windows = false

    fun getKey() -> Char 
        val hwregs = (0xe0000000:HwRegs)
        var keycode = hwregs.keyboard
        # if no key pressed then return 0
        if keycode = -1
            return 0

        #print("<%x>\n",keycode)

        # E0 and F0 act as modifiers to other codes
        if keycode = 0xE0
            seenE0 = true
            return 0
        elsif keycode = 0xF0
            seenF0 = true
            return 0
        
        # keycode E0 is an extended key. Model this here by adding 128 to the keycode
        val key = if seenE0 then keycode + 128 else keycode
        val pressed = not seenF0
        seenE0 = false
        seenF0 = false
        
        when key
            0x12 -> lshift = pressed
            0x14 -> lctrl = pressed
            0x11 -> lalt = pressed
            0x59 -> rshift = pressed
            0x94 -> rctrl = pressed
            0x91 -> ralt = pressed
            0x9f -> windows = pressed
            0xaf -> menu = pressed
            0x58 -> 
                if pressed
                    caps = not caps
            else -> 
                if pressed
                    if lshift or rshift
                        return keycode_table[key*4+1]
                    elsif lctrl or rctrl
                        return keycode_table[key*4+3]
                    elsif caps
                        return keycode_table[key*4+2]
                    else 
                        return keycode_table[key*4]
        return 0
    end fun

    fun waitKey()->Char
        var key : Char
        repeat
            key = getKey()
        until key!=0
        return key

